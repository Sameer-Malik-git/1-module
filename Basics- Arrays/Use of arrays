import java.util.*;
public class Main {
    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);
        
        int n = in.nextInt();
        int a[] = new int[n];
    
        int maximumOfNumbers = 0;
        for(int i=0;i<n;i++)
        {
            a[i] = in.nextInt(); // we will input the number given by the user
            if(a[i] > maximumOfNumbers)
            {
                maximumOfNumbers = a[i];
            }
            // maximumOfNumbers = Math.max(maximumOfNumbers, x);
        }
        
        System.out.println(maximumOfNumbers);
        
        // whenever we require of group of numbers in future and they belong to similiar datatype 
        for(int i=0;i<n;i++)
        {
            System.out.print(a[i]+" ");
        }
    }
}
